#include <stdio.h>
#include <stdlib.h>

void genap(int batas){
    int i;
    for ( i = 1; i <= batas; i++)
    {
        if (i % 2 == 0)
        {
            printf("Bilangan %d merupakan bilangan genap\n",i);
        }   
    }   
}
int main()
{
    int input;
    system("cls");
    
    printf("Masukkan angka batas : ");
    
    scanf("%d",&input);
    
    genap(input);

return 0;
}  
